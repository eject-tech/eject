{
  "name": "@eject/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "starters/*",
    "generators/*"
  ],
  "scripts": {
    "postinstall": "pnpm exec husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "pnpm -w exec beachball",
    "interface": "pnpm --filter=interface"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "beachball": "^2.31.12",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "beachball": {
    "access": "public",
    "branch": "main"
  }
}
