{
  "name": "@eject/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "integrations/*",
    "starters/*",
    "generators/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "pnpm -w exec changeset",
    "release": "pnpm -w exec changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "prettier": "^3.0.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
